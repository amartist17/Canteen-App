<!DOCTYPE html>
<html lang="en">
  
<head>
    <!--  Title -->
    <title>Mordenize</title>
    <!--  Required Meta Tag -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="handheldfriendly" content="true" />
    <meta name="MobileOptimized" content="width" />
    <meta name="description" content="Mordenize" />
    <meta name="author" content="" />
    <meta name="keywords" content="Mordenize" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!--  Favicon -->
    <link rel="shortcut icon" type="image/png" href="/images/logos/favicon.png" />
    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="/libs/owl.carousel/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/libs/prismjs/themes/prism.min.css">
    <!-- Core Css -->
    <link  id="themeColors"  rel="stylesheet" href="/css/style.min.css" />
    <style>
        .bg-info-subtle{
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            height: 39px !important;
        }
    </style>
  </head>
  <body>
    <!-- Preloader -->
    <div class="preloader">
      <img src="/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
    </div>
    <!-- Preloader -->
    <div class="preloader">
      <img src="/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
    </div>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-theme="blue_theme"  data-layout="vertical" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
      
      
      <%- include('./ui/sidenav') %>
      
      
      <!--  Main wrapper -->
      <div class="body-wrapper">
        
        <%- include('./ui/header') %>
        <div class="container-fluid">
          <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex justify-content-center">
            <div class="d-flex justify-content-center w-100">
              <div class="row justify-content-center w-100">
               <div class="col-md-12 col-lg-7 col-xxl-5">
                  <div class="card mb-0 mt-8">
                    <div class="card-body">
                      <a href="/dashboard" class="text-nowrap logo-img text-center d-block mb-5 w-100">
                        <img src="/images/logos/pblogo.png" width="180" alt="">
                      </a>
                      <h2 class="mb-3 fs-7 fw-bolder" style="text-align: center;">Plan Purchase</h2>
                      <form id="planForm">
                       
                      
                        <!-- Start Date Field -->
                        <div class="input-group mb-3 mt-3">
                          <div class="input-group-prepend">
                            <button class="btn bg-info-subtle text-info" type="button">
                              <i class="ti ti-calendar-event fs-4"></i>
                            </button>
                          </div>
                          <input 
                            type="date" 
                            name="startDate" 
                            class="form-control" 
                            required 
                          />
                        </div>
                      
                        <!-- Plan Dropdown -->
                        <div class="input-group mb-3 mt-3">
                          <div class="input-group-prepend">
                            <button class="btn bg-info-subtle text-info" type="button">
                              <i class="ti ti-pencil fs-4"></i>
                            </button>
                          </div>
                          <select 
                            name="definedPlanId" 
                            class="form-select mr-sm-2" 
                            id="planSelect" 
                            required
                          >
                            <option selected disabled>Choose Plan...</option>
                            <% plans.forEach(plan => { %>
                              <option value="<%= plan.definedPlanId %>">
                                <%= plan.planName %> @ â‚¹<%= plan.price %>
                              </option>
                            <% }) %>
                          </select>
                        </div>
                      
                        <!-- Payment Mode -->
                        <div class="form-check form-check-inline">
                          <input 
                            class="form-check-input" 
                            type="radio" 
                            name="mode" 
                            id="inlineRadio1" 
                            value="Cash" 
                            required 
                          />
                          <label class="form-check-label" for="inlineRadio1">Cash</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input 
                            class="form-check-input" 
                            type="radio" 
                            name="mode" 
                            id="inlineRadio2" 
                            value="Online" 
                            required 
                          />
                          <label class="form-check-label" for="inlineRadio2">Online</label>
                        </div>
                        <input type="hidden" name="type" value="plan-update" />
                         <!-- RFID Field -->
                        <div class="input-group mb-3 mt-3">
                          <div class="input-group-prepend">
                            <button class="btn bg-info-subtle text-info" type="button">
                              <i class="ti ti-id-badge-2 fs-4"></i>
                            </button>
                          </div>
                          <input 
                            type="text" 
                            name="rfidCard" 
                            class="form-control" 
                            placeholder="RFID" 
                            aria-label="RFID" 
                            required
                          />
                        </div>
                        <!-- Submit Button -->
                        <button 
                          type="submit" 
                          class="btn btn-primary w-100 py-8 mb-4 rounded-2 mt-3"
                        >
                          Submit
                        </button>
                      
                        <!-- Alerts -->
                        <div id="PlanAlert"></div>
                      </form>
                      
                    </div>
                  </div>
                </div>
                 <!-- RIGHT: Check Remaining Meals -->
  <div class="col-md-12 col-lg-5 col-xxl-4">
    <div class="card mb-0 mt-8 shadow-sm">
      <div class="card-body">
        <h5 class="mb-3 fw-semibold text-center">Check Remaining Meals</h5>

        <form id="rfidCheckForm" novalidate>
          <div class="input-group">
            <span class="input-group-text">
              <i class="ti ti-id-badge-2 fs-5 text-info"></i>
            </span>
            <input
              type="text"
              id="rfid"
              class="form-control"
              placeholder="Scan or enter RFID"
              autocomplete="off"
              required
            />
            <button class="btn btn-info text-white" type="submit">Check</button>
          </div>
          <div class="form-text mt-1">Scanner pressing Enter works here.</div>
        </form>

        <!-- Result area -->
        <div id="rfidResult" class="mt-3" style="min-height:2.25rem;"></div>
      </div>
    </div>
  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    

   
<%- include('./ui/footer') %>