<!DOCTYPE html>
<html lang="en">
  
<head>
    <!--  Title -->
    <title>Staff Attendance</title>
    <!--  Required Meta Tags -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="handheldfriendly" content="true" />
    <meta name="MobileOptimized" content="width" />
    <meta name="description" content="Staff Attendance" />
    <meta name="author" content="" />
    <meta name="keywords" content="Attendance" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!--  Favicon -->
    <link rel="shortcut icon" type="image/png" href="/images/logos/favicon.png" />
    <!-- Core CSS -->
    <link id="themeColors" rel="stylesheet" href="/css/style.min.css" />
    <style>
        .bg-info-subtle{
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            height: 39px !important;
        }
    </style>
  </head>

  <body>
    <!-- Preloader -->
    <div class="preloader">
      <img src="/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
    </div>

    <!-- Page Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-theme="blue_theme" data-layout="vertical" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">

      <%- include('./ui/sidenav') %>

      <!-- Main wrapper -->
      <div class="body-wrapper">

        <%- include('./ui/header') %>

        <div class="container-fluid">
          <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex justify-content-center">
            <div class="d-flex justify-content-center w-100">
              <div class="row justify-content-center w-100">
                <div class="col-md-12 col-lg-10 col-xxl-5">
                  <div class="card mb-0 mt-8">
                    <div class="card-body">
                      <a href="/dashboard" class="text-nowrap logo-img text-center d-block mb-5 w-100">
                        <img src="/images/logos/pblogo.png" width="180" alt="">
                      </a>
                      <h2 class="mb-3 fs-7 fw-bolder text-center">Staff Attendance</h2>

                      <form id="staffAttendanceForm">
                        <!-- RFID Field -->
                        <div class="input-group mb-3 mt-3">
                          <div class="input-group-prepend">
                            <button class="btn bg-info-subtle text-info" type="button">
                              <i class="ti ti-id-badge-2 fs-4"></i>
                            </button>
                          </div>
                          <input 
                            type="text" 
                            name="rfidCard" 
                            class="form-control" 
                            placeholder="Scan RFID Card" 
                            aria-label="RFID" 
                            required 
                            autocomplete="off"
                            autofocus
                          />
                        </div>

                        <!-- Hidden Input for attendance type (Auto handled by backend) -->
                        <!-- <input type="hidden" name="attendanceAction" value="auto" /> -->

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 py-8 mb-4 rounded-2">Mark Attendance</button>

                        <!-- Alerts -->
                        <div id="AttendanceAlert"></div>
                      </form>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <%- include('./ui/footer') %>



