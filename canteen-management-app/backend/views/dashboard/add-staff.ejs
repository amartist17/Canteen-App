  <body>
    <!-- Preloader -->
    <div class="preloader">
      <img src="/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
    </div>
    <!-- Preloader -->
    <div class="preloader">
      <img src="/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
    </div>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-theme="blue_theme"  data-layout="vertical" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
      
      
      <%- include('./ui/sidenav') %>
      
      
      <!--  Main wrapper -->
      <div class="body-wrapper">
        
        <%- include('./ui/header') %>
        <div class="container-fluid">
          <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex justify-content-center">
            <div class="d-flex justify-content-center w-100">
              <div class="row justify-content-center w-100">
                <div class="col-md-12 col-lg-10 col-xxl-5">
                  <div class="card mb-0 mt-8">
                    <div class="card-body">
                      <a href="/dashboard" class="text-nowrap logo-img text-center d-block mb-5 w-100">
                        <img src="/images/logos/pblogo.png" width="180" alt="">
                      </a>
                      <h2 class="mb-3 fs-7 fw-bolder" style="text-align: center;">Add Staff</h2>
                      <form id="addStaffForm">

  <!-- Staff Name Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-user fs-4"></i>
      </button>
    </div>
    <input type="text" name="name" class="form-control" placeholder="Enter Staff Name" aria-label="Name" required />
  </div>

  <!-- Phone Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-phone fs-4"></i>
      </button>
    </div>
    <input type="text" name="phone" class="form-control" placeholder="Enter Phone Number" aria-label="Phone" required />
  </div>

  <!-- RFID Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-id-badge-2 fs-4"></i>
      </button>
    </div>
    <input type="text" name="rfidCard" class="form-control" placeholder="Enter RFID" aria-label="RFID" required />
  </div>

  <!-- Department Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-building fs-4"></i>
      </button>
    </div>
    <select name="department" class="form-control" required>
      <option value="">Select Department</option>
      <option value="management">Management</option>
      <option value="indian">Indian</option>
      <option value="chaat">Chaat</option>
      <option value="continental">Continental</option>
      <option value="chinese">Chinese</option>
      <option value="tandoor">Tandoor</option>
      <option value="south">South Indian</option>
      <option value="service">Service</option>
      <option value="housekeeping">Housekeeping</option>
      <option value="other">Other</option>
    </select>
  </div>

  <!-- Position Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-briefcase fs-4"></i>
      </button>
    </div>
    <select name="position" class="form-control" required>
      <option value="">Select Position</option>
      <option value="management">Management</option>
      <option value="chef">Chef</option>
      <option value="helper">Helper</option>
      <option value="waiter">Waiter</option>
      <option value="captain">Captain</option>
      <option value="house keeper">House Keeper</option>
      <option value="cashier">Cashier</option>
      <option value="inventory">Inventory</option>
      <option value="other">Other</option>
    </select>
  </div>

  <!-- Salary Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-currency-rupee fs-4"></i>
      </button>
    </div>
    <input type="number" name="salary" class="form-control" placeholder="Enter Salary" aria-label="Salary" required />
  </div>

  <!-- Joining Date Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-calendar fs-4"></i>
      </button>
    </div>
    <input type="date" name="joiningDate" class="form-control" aria-label="Joining Date" required />
  </div>

  <!-- Referenced By Field -->
  <div class="input-group mb-3 mt-3">
    <div class="input-group-prepend">
      <button class="btn bg-info-subtle text-info" type="button">
        <i class="ti ti-user-check fs-4"></i>
      </button>
    </div>
    <input type="text" name="referencedBy" class="form-control" placeholder="Referenced By (Optional)" aria-label="Referenced By" />
  </div>

  <!-- Submit Button -->
  <button type="submit" class="btn btn-primary w-100 py-8 mb-4 rounded-2 mt-3">Add Staff</button>

  <!-- Alerts -->
  <div id="AddStaffAlert"></div>
</form>

                      
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    

   
